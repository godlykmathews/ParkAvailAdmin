    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}
                <div class="col-md-3 p-3">
                    <div class="card" style="width: 15rem; height:30rem">
                        <img class="card-img-top img-fluid"
                            style="object-fit: cover; height: auto;"
                            src="{{this.image}}"
                            alt="Card image cap" style="">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">Rs. {{this.price}}</p>
                            <p class="card-text">Location: {{this.location}}</p>
                        </div>
                    </div>
                </div>  
                {{/each}}
            </div>
        </div>
    </section>